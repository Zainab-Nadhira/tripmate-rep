<body>
  <div class="container">
    <h1 id="title">My Project</h1>
    
    <!-- Dynamic UI Section -->
    <input type="text" id="input1" placeholder="Enter something..." />
    <input type="text" id="input2" placeholder="Optional second input..." />
    <button id="actionBtn">Submit</button>
    
    <div class="output" id="output">Output will appear here...</div>
  </div>

  <script>
    // ===== Universal JS Setup =====

    // Elements
    const btn = document.getElementById('actionBtn');
    const output = document.getElementById('output');

    // Example function â€” you can replace with any logic (Calculator, Quiz, etc.)
    btn.addEventListener('click', () => {
      const val1 = document.getElementById('input1').value;
      const val2 = document.getElementById('input2').value;

      // Example: Calculator Addition
      if(!isNaN(val1) && !isNaN(val2) && val1 && val2){
        output.innerText = Result: ${Number(val1) + Number(val2)};
      } 
      // Example: API call
      else if(val1.toLowerCase() === 'joke') {
        getJokeFromAPI();
      } 
      else {
        output.innerText = You entered: ${val1};
      }
    });

    // ===== Sample API Integration =====
    async function getJokeFromAPI() {
      output.innerText = "Loading joke...";
      try {
        const res = await fetch("https://api.chucknorris.io/jokes/random");
        const data = await res.json();
        output.innerText = data.value;
      } catch (error) {
        output.innerText = "Error fetching data.";
      }
    }

     </script>
